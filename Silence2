game.ReplicatedStorage.GameData.LatestRoom.Changed:Wait()

---====== Load spawner ======---

local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V2/Source.lua"))()

---====== Create entity ======---

local entity = spawner.Create({
	Entity = {
		Name = "Silence",
		Asset = "rbxassetid://118605282221635",
		HeightOffset = 0
	},
	Lights = {
		Flicker = {
			Enabled = false,
			Duration = 1
		},
		Shatter = true,
		Repair = false
	},
	Earthquake = {
		Enabled = false
	},
	CameraShake = {
		Enabled = true,
		Range = 100,
		Values = {1.5, 20, 0.1, 1} -- Magnitude, Roughness, FadeIn, FadeOut
	},
	Movement = {
		Speed = 56,
		Delay = 0,
		Reversed = false
	},
	Rebounding = {
		Enabled = false,
		Type = "Ambush", -- "Blitz"
		Min = 1,
		Max = 1,
		Delay = 2
	},
	Damage = {
		Enabled = true,
		Range = 40,
		Amount = 125
	},
	Crucifixion = {
		Enabled = true,
		Range = 40,
		Resist = false,
		Break = true
	},
	Death = {
		Type = "Guiding", -- "Curious"
		Hints = {"ME GO PLAY SKIBIDI TOILET", "GOODBYE", "STUPID YOU DIE BY A WEAK ENTITY", "HERE IS NOT FOR NOOB"},
		Cause = ""
	}
})

---====== Debug entity ======---

entity:SetCallback("OnSpawned", function()
    print("Entity has spawned")
end)

entity:SetCallback("OnStartMoving", function()
    print("Entity has started moving")
end)

entity:SetCallback("OnEnterRoom", function(room, firstTime)
    if firstTime == true then
        print("Entity has entered room: ".. room.Name.. " for the first time")
    else
        print("Entity has entered room: ".. room.Name.. " again")
    end
end)

local TweenService = game:GetService("TweenService")
local player = game.Players.LocalPlayer
local gui = player:WaitForChild("PlayerGui")

local jumpscareGui
local overlay
local face
local sound
local flashLoop
local fadeTween

entity:SetCallback("OnLookAt", function(lineOfSight)
	if lineOfSight == true then
		print("Player is looking at entity")

		-- Nếu trước đó có GUI jumpscare thì xóa và dừng tween
		if fadeTween then
			fadeTween:Cancel()
			fadeTween = nil
		end
		if flashLoop then
			task.cancel(flashLoop)
			flashLoop = nil
		end
		if jumpscareGui then
			jumpscareGui:Destroy()
			jumpscareGui = nil
			overlay = nil
			face = nil
			sound = nil
		end

	else
		print("Player view is obstructed by something")

		if not jumpscareGui then
			jumpscareGui = Instance.new("ScreenGui")
			jumpscareGui.Name = "JumpscareGui"
			jumpscareGui.IgnoreGuiInset = true
			jumpscareGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
			jumpscareGui.Parent = gui
		end

		overlay = jumpscareGui:FindFirstChild("Overlay") or Instance.new("ImageLabel")
		overlay.Name = "Overlay"
		overlay.BackgroundTransparency = 1
		overlay.Size = UDim2.new(1, 0, 1, 0)
		overlay.Position = UDim2.new(0, 0, 0, 0)
		overlay.Image = "rbxassetid://236542974"
		overlay.ImageTransparency = 1
		overlay.ZIndex = 998
		overlay.Parent = jumpscareGui

		face = jumpscareGui:FindFirstChild("Face") or Instance.new("ImageLabel")
		face.Name = "Face"
		face.AnchorPoint = Vector2.new(0.5, 0.5)
		face.BackgroundTransparency = 1
		face.Position = UDim2.new(0.5, 0, 0.5, 0)
		face.Size = UDim2.new(0, 150, 0, 150)
		face.Image = "rbxassetid://YOUR_FACE_IMAGE_ID"
		face.ImageTransparency = 1
		face.ZIndex = 1000
		face.Parent = jumpscareGui

		sound = jumpscareGui:FindFirstChild("MyEarsBurn")
		if not sound then
			sound = Instance.new("Sound")
			sound.Name = "MyEarsBurn"
			sound.SoundId = "rbxassetid://372770465"
			sound.PlaybackSpeed = 1
			sound.Volume = 1
			sound.Parent = jumpscareGui

			local shift = Instance.new("PitchShiftSoundEffect")
			shift.Octave = 0.7
			shift.Parent = sound

			local distort = Instance.new("DistortionSoundEffect")
			distort.Level = 0.4
			distort.Parent = sound

			local eq = Instance.new("EqualizerSoundEffect")
			eq.HighGain = 10
			eq.MidGain = 8
			eq.LowGain = 4
			eq.Parent = sound
		end

		-- Flashing overlay effect
		local overlayImages = {
			"rbxassetid://236542974",
			"rbxassetid://184251462"
		}
		local i = 1
		if flashLoop then task.cancel(flashLoop) end
		flashLoop = task.spawn(function()
			while overlay and overlay.Parent do
				overlay.Image = overlayImages[i]
				i = i % #overlayImages + 1
				task.wait(0.001)
			end
		end)

		-- Tween giảm transparency
		if fadeTween then
			fadeTween:Cancel()
		end
		fadeTween = TweenService:Create(overlay, TweenInfo.new(5, Enum.EasingStyle.Linear), { ImageTransparency = 0 })
		fadeTween:Play()

		-- Khi transparency overlay về 0, thực hiện jumpscare
		task.spawn(function()
			while overlay and overlay.Parent and overlay.ImageTransparency > 0 do
				task.wait(0.1)
			end

			-- Hiện mặt
			face.ImageTransparency = 0

			-- Zoom mặt
			TweenService:Create(face, TweenInfo.new(0.6), {
				Size = UDim2.new(2.5, 0, 2.5, 0)
			}):Play()

			-- Rung mặt
			task.spawn(function()
				local orig = face.Position
				for j = 1, 20 do
					local x = math.random(-4, 4)
					local y = math.random(-4, 4)
					face.Position = orig + UDim2.new(0, x, 0, y)
					task.wait(0.02)
				end
				face.Position = orig
			end)

			-- Phát âm thanh
			sound:Play()

			-- Giết player
			local char = player.Character
			if char and char:FindFirstChild("Humanoid") then
				char.Humanoid.Health = 0
			end
		end)
	end
end)


entity:SetCallback("OnRebounding", function(startOfRebound)
    if startOfRebound == true then
        print("Entity has started rebounding")
	else
        print("Entity has finished rebounding")
	end
end)

entity:SetCallback("OnDespawning", function()
    print("Entity is despawning")
end)

entity:SetCallback("OnDespawned", function()
    print("Entity has despawned")
end)

entity:SetCallback("OnDamagePlayer", function(newHealth)
	if newHealth == 0 then
		print("Entity has killed the player")
  local cue2 = Instance.new("Sound")
    cue2.Parent = game.Workspace
    cue2.Name = "Spawn"
    cue2.SoundId = "rbxassetid://7861818231"
    cue2.Volume = 99999
    cue2.PlaybackSpeed = 0.9
    cue2:Play()
	else
		print("Entity has damaged the player")

	end
end)

--[[

DEVELOPER NOTE:
By overwriting 'CrucifixionOverwrite' the default crucifixion callback will be replaced with your custom callback.

entity:SetCallback("CrucifixionOverwrite", function()
    print("Custom crucifixion callback")
end)

]]--

---====== Run entity ======---

entity:Run()
