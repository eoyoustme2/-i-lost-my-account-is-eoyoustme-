game.ReplicatedStorage.GameData.LatestRoom.Changed:Wait()

---====== Load spawner ======---

local spawner = loadstring(game:HttpGet("https://raw.githubusercontent.com/RegularVynixu/Utilities/main/Doors/Entity%20Spawner/V2/Source.lua"))()

---====== Create entity ======---

local entity = spawner.Create({
    Entity = {
        Name = "Silence",
        Asset = "rbxassetid://118605282221635",
        HeightOffset = 0
    },
    Lights = {
        Flicker = {
            Enabled = false,
            Duration = 1
        },
        Shatter = true,
        Repair = false
    },
    Earthquake = {
        Enabled = false
    },
    CameraShake = {
        Enabled = true,
        Range = 100,
        Values = {1.5, 20, 0.1, 1} -- Magnitude, Roughness, FadeIn, FadeOut
    },
    Movement = {
        Speed = 56,
        Delay = 0,
        Reversed = false
    },
    Rebounding = {
        Enabled = false,
        Type = "Ambush", -- "Blitz"
        Min = 1,
        Max = 1,
        Delay = 2
    },
    Damage = {
        Enabled = true,
        Range = 40,
        Amount = 125
    },
    Crucifixion = {
        Enabled = true,
        Range = 40,
        Resist = false,
        Break = true
    },
    Death = {
        Type = "Guiding", -- "Curious"
        Hints = {"ME GO PLAY SKIBIDI TOILET", "GOODBYE", "STUPID YOU DIE BY A WEAK ENTITY", "HERE IS NOT FOR NOOB"},
        Cause = ""
    }
})

---====== Debug entity ======---

entity:SetCallback("OnSpawned", function()
    print("Entity has spawned")
end)

entity:SetCallback("OnStartMoving", function()
    print("Entity has started moving")
end)

entity:SetCallback("OnEnterRoom", function(room, firstTime)
    if firstTime == true then
        print("Entity has entered room: ".. room.Name.. " for the first time")
    else
        print("Entity has entered room: ".. room.Name.. " again")
    end
end)

entity:SetCallback("OnLookAt", function(lineOfSight)
    local TweenService = game:GetService("TweenService")
    local player = game.Players.LocalPlayer
    local gui = player:WaitForChild("PlayerGui")

    -- Các biến GUI và tween phải nằm ngoài function để giữ trạng thái
    local jumpscareGui = gui:FindFirstChild("JumpscareGui")
    local overlay = jumpscareGui and jumpscareGui:FindFirstChild("Overlay")
    local face = jumpscareGui and jumpscareGui:FindFirstChild("Face")
    local sound = jumpscareGui and jumpscareGui:FindFirstChild("MyEarsBurn")

    -- Biến lưu trạng thái đã từng nhìn thấy entity
    if not entity._hasBeenSeen then
        entity._hasBeenSeen = false
    end

    if lineOfSight == true then
        print("Player is looking at entity")

        entity._hasBeenSeen = true  -- Đánh dấu đã nhìn thấy

        -- Nếu overlay jumpscare đang tồn tại, bật lại (nếu muốn)
        if jumpscareGui then
            overlay.ImageTransparency = 1
            face.ImageTransparency = 1
        end

    else
        print("Player view is obstructed by something")

        -- Nếu đã từng nhìn thấy entity trước đó, thì fade out overlay (ẩn dần)
        if entity._hasBeenSeen and jumpscareGui and overlay then
            -- Tạo tween để ẩn overlay dần
            local fadeOutTween = TweenService:Create(overlay, TweenInfo.new(2, Enum.EasingStyle.Linear), {ImageTransparency = 1})
            fadeOutTween:Play()
            -- Ẩn luôn face image
            face.ImageTransparency = 1

            -- Có thể dừng âm thanh nếu đang phát
            if sound and sound.IsPlaying then
                sound:Stop()
            end

        else
            -- Chưa từng nhìn thấy, tạo jumpscare mới
            local function createGui()
                if jumpscareGui then return end
                jumpscareGui = Instance.new("ScreenGui")
                jumpscareGui.Name = "JumpscareGui"
                jumpscareGui.IgnoreGuiInset = true
                jumpscareGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
                jumpscareGui.Parent = gui

                overlay = Instance.new("ImageLabel")
                overlay.Name = "Overlay"
                overlay.BackgroundTransparency = 1
                overlay.Size = UDim2.new(1,0,1,0)
                overlay.Position = UDim2.new(0,0,0,0)
                overlay.Image = "rbxassetid://236542974"
                overlay.ImageTransparency = 1
                overlay.ZIndex = 998
                overlay.Parent = jumpscareGui

                face = Instance.new("ImageLabel")
                face.Name = "Face"
                face.AnchorPoint = Vector2.new(0.5, 0.5)
                face.BackgroundTransparency = 1
                face.Position = UDim2.new(0.5, 0, 0.5, 0)
                face.Size = UDim2.new(0, 150, 0, 150)
                face.Image = "rbxassetid://YOUR_FACE_IMAGE_ID"  -- Thay ID ảnh
                face.ImageTransparency = 1
                face.ZIndex = 1000
                face.Parent = jumpscareGui

                sound = Instance.new("Sound")
                sound.Name = "MyEarsBurn"
                sound.SoundId = "rbxassetid://372770465"
                sound.Volume = 1
                sound.Parent = jumpscareGui
            end

            local function startJumpscare()
                createGui()
                local fadeInTween = TweenService:Create(overlay, TweenInfo.new(5, Enum.EasingStyle.Linear), {ImageTransparency = 0})
                fadeInTween:Play()

                fadeInTween.Completed:Connect(function()
                    face.ImageTransparency = 0

                    TweenService:Create(face, TweenInfo.new(0.7), {
                        Size = UDim2.new(2.5, 0, 2.5, 0)
                    }):Play()

                    local char = player.Character
                    if char and char:FindFirstChild("Humanoid") then
                        char.Humanoid.Health = 0
                    end

                    sound:Play()
                end)
            end

            startJumpscare()
        end
    end
end)

entity:SetCallback("OnRebounding", function(startOfRebound)
    if startOfRebound == true then
        print("Entity has started rebounding")
    else
        print("Entity has finished rebounding")
    end
end)

entity:SetCallback("OnDespawning", function()
    print("Entity is despawning")
end)

entity:SetCallback("OnDespawned", function()
    print("Entity has despawned")
end)

entity:SetCallback("OnDamagePlayer", function(newHealth)
    if newHealth == 0 then
        print("Entity has killed the player")
        local cue2 = Instance.new("Sound")
        cue2.Parent = game.Workspace
        cue2.Name = "Spawn"
        cue2.SoundId = "rbxassetid://7861818231"
        cue2.Volume = 1 -- sửa volume cho hợp lý
        cue2.PlaybackSpeed = 0.9
        cue2:Play()
    else
        print("Entity has damaged the player")
    end
end)

---====== Run entity ======---

entity:Run()
